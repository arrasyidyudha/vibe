<?xml version="1.0" encoding="utf-8"?>


<android.widget.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Info"
    android:background="@color/colorWhite">

    <RelativeLayout  android:layout_marginHorizontal="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!-- Judul-->
        <TextView
            android:id="@+id/title_homepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:text="@string/title_info"
            android:fontFamily="@font/bold"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Username-->
        <TextView
            android:id="@+id/r_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_homepage"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:fontFamily="@font/semibold"
            android:layout_alignParentStart="true"
            android:text="@string/username"
           />
        <!-- Prodi-->
        <TextView
            android:id="@+id/r_prodi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/r_username"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:fontFamily="@font/semibold"
            android:layout_alignParentStart="true"
            android:text="@string/Prodi"
            />

        <!-- Universitas-->
        <TextView
            android:id="@+id/r_univ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/r_prodi"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:fontFamily="@font/semibold"
            android:layout_alignParentStart="true"
            android:text="@string/universitas"
            />

        <!-- Telp-->
        <TextView
            android:id="@+id/r_telp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/r_univ"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:fontFamily="@font/semibold"
            android:layout_alignParentStart="true"
            android:text="@string/Phone"
            />

        <!-- Email-->
        <TextView
            android:id="@+id/r_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/r_telp"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:fontFamily="@font/semibold"
            android:layout_alignParentStart="true"
            android:text="@string/Email"
            />
        <!-- Password-->
        <TextView
            android:id="@+id/r_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/r_email"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:fontFamily="@font/semibold"
            android:layout_alignParentStart="true"
            android:text="@string/Password"
            />
        <!-- Konfimasi password-->
        <TextView
            android:id="@+id/r_konfirmasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/r_password"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:fontFamily="@font/semibold"
            android:layout_alignParentStart="true"
            android:text="@string/KonfirmasiPassword"

            />


        <!-- Form button-->
        <Button
            android:id="@+id/button_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/r_konfirmasi"
            android:layout_centerInParent="true"
            android:width="160dp"
            android:height="56dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_primary"
            android:fontFamily="@font/semibold"
            android:textSize="20sp"
            android:text="@string/Homepage"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:onClick="home"
            />


    </RelativeLayout>

</android.widget.ScrollView>
